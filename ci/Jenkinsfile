pipeline {
  agent any

  parameters {
    string(defaultValue: 'World', description: 'persons name', name: 'name')
  }

  stages {
    stage('test') {
      steps {
        script {
          sh "echo Hello ${params.name}!"
        }
      }
    }
    stage('stage2') {
      steps {
        script {
          sh 'echo "this is the second stage"'
        }
      }
    }
  }
  post {
    cleanup {
      cleanWs()
    }
  }
}
