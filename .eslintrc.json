{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "describe": true,
        "test": true,
        "expect": true
    },
    "ignorePatterns": ["node_modules/**/*.js", "dist/**/*.js"],
    "rules": {
        "comma-dangle": 0,
        "indent": ["error", "tab"],
        "linebreak-style": 0,
        "no-tabs": [2, { "allowIndentationTabs": true} ]
    }
}
